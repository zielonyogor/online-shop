<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,100..900;1,100..900&family=Tiny5&display=swap" rel="stylesheet">
    <title>Cart - jelly shop</title>
</head>
<body>
  <%- include('partials/navbar.ejs', {sess: sess}) %>

  <main>
    <% if (sess.error) { %>
      <div class="error-message">
        <%= sess.error %>
      </div>
      <% sess.error = null; %>
    <% } %>

    <div class="cart-container">
        <div>
            <% itemsInCart.forEach(item => { %>
                <%- include('partials/itemInCartTile.ejs', {item: item}) %>
            <% }) %>
        </div>
        <form method="POST" action="/cart/buy">
          <button class="buy-btn" <%= itemsInCart.length === 0 ? 'disabled' : '' %>>Buy!</button>
        </form>
    </div>
  </main>

  <%- include('partials/footer.ejs') %>
</body>
</html>
